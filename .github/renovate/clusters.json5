{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Separate PRs for pi cluster",
      "matchFileNames": ["**/clusters/pi/**"],
      "additionalBranchPrefix": "pi-"
    },
    {
      "description": "Separate PRs for test cluster",
      "matchFileNames": ["**/clusters/test/**"],
      "additionalBranchPrefix": "test-"
    }
    ,
    {
      "description": "Separate PRs for test cluster",
      "matchFileNames": ["**/apps/base/**"],
      "additionalBranchPrefix": "shared-"
    }
  ]
}
